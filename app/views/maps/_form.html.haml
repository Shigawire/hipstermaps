.uk-child-width-expand{'uk-grid' => ''}
  %div
    #hipstermap-poster-container
      #hipstermap-preview-map
      #hipstermap-title
        E A R T H
      #hipstermap-subtitle
        C O U N T R Y
      #hipstermap-coords
        41°01"14" N 28°58"30" O
  %div
    - if @map.errors.any?
      .uk-alert.uk-alert-danger
        = @map.errors.full_messages.to_sentence
    = simple_form_for @map, html: {class: 'uk-form-stacked'} do |f|
      %legend.uk-legend Map Configuration
      .uk-margin
        //%label.uk-form-label{:for => "form-stacked-select"} Format
        .uk-form-controls
          = f.input :format, as: :select, collection: [['DIN A', 'DIN']], input_html: {class: 'uk-select'}, label_html: {class: 'uk-form-label'}
      .uk-margin
        .uk-form-controls
          = f.input :style, as: :select, collection: [['Blue', 'blue']], input_html: {class: 'uk-select'}, label_html: {class: 'uk-form-label'}
      .uk-margin
        .uk-form-controls
          = f.input :title, input_html: {class: 'uk-input', value: 'E A R T H'}, label_html: {class: 'uk-form-label'}
      .uk-margin
        .uk-form-controls
          = f.input :subtitle, input_html: {class: 'uk-input', value: 'C O U N T R Y'}, label_html: {class: 'uk-form-label'}
      .uk-margin
        .uk-form-controls
          = f.input :coords, input_html: {class: 'uk-input', value: ''}, label_html: {class: 'uk-form-label'}
      .uk-margin
        = f.input :lon, as: :hidden, input_html: {value: 0}
        = f.input :lat, as: :hidden, input_html: {value: 0}
        = f.input :zoom, as: :hidden, input_html: {value: 0.1}

        = f.submit class: 'button uk-button uk-button-primary uk-width-1-1'
